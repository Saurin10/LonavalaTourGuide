<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="actionBarStyle">@style/MiwokAppBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- App bar style -->
    <style name="MiwokAppBarStyle"
        parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>



    <style name="CategoryTab">
        <item name="tabIndicatorColor">@android:color/black</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance"
        parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/background_dark</item>
    </style>

</resources>
